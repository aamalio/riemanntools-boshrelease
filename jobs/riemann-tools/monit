
check process riemann-health
  with pidfile /var/vcap/sys/run/riemann-tools/health_pid
  start program "/var/vcap/jobs/riemann-tools/bin/ctl-health start"
  stop program "/var/vcap/jobs/riemann-tools/bin/ctl-health stop"
  group vcap

check process riemann-net
  with pidfile /var/vcap/sys/run/riemann-tools/net_pid
  start program "/var/vcap/jobs/riemann-tools/bin/ctl-net start"
  stop program "/var/vcap/jobs/riemann-tools/bin/ctl-net stop"
  group vcap

check process riemann-fd
  with pidfile /var/vcap/sys/run/riemann-tools/fd_pid
  start program "/var/vcap/jobs/riemann-tools/bin/ctl-fd start"
  stop program "/var/vcap/jobs/riemann-tools/bin/ctl-fd stop"
  group vcap

check process riemann-diskstats
  with pidfile /var/vcap/sys/run/riemann-tools/diskstats_pid
  start program "/var/vcap/jobs/riemann-tools/bin/ctl-diskstats start"
  stop program "/var/vcap/jobs/riemann-tools/bin/ctl-diskstats stop"
  group vcap
