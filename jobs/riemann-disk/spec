---
name: riemann-disk

packages:
  - ruby
  - riemann-tools

templates:
  ctl-diskstats.erb: bin/ctl-diskstats
  ctl-fd.erb: bin/ctl-fd

properties:
  riemann.server:
    description: "IP of the riemann server."
  riemann.suffix:
    description: "Suffix for the riemann host"
    default: bosh
  riemann.fd.sys_warning:
    description: "open file descriptor threshold for system"
    default: 800
  riemann.fd.sys_critical:
    description: "open file descriptor critical threshold for system"
    default: 900
  riemann.fd.proc_warning:
    description: "open file descriptor threshold for process"
    default: 800
  riemann.fd.proc_critical:
    description: "open file descriptor critical threshold for process"
    default: 900
  riemann.fd.processes:
    description: "list of processes id to measure fd usage in addition to system total"
